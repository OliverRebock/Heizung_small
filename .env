# Pi 5 Sensor Monitor Environment Variables
# ==========================================

# Hardware Configuration
PI5_DS18B20_COUNT=6
PI5_DS18B20_GPIO=4
PI5_DHT22_GPIO=18

# Performance Settings
PI5_HIGH_PERFORMANCE=true
PI5_PARALLEL_READING=true
PI5_READ_TIMEOUT=2.0
PI5_RETRY_COUNT=3

# InfluxDB Configuration
INFLUXDB_HOST=localhost
INFLUXDB_PORT=8086
INFLUXDB_USERNAME=pi5admin
INFLUXDB_PASSWORD=pi5sensors2024
INFLUXDB_ORG=Pi5SensorOrg
INFLUXDB_BUCKET=sensor_data
INFLUXDB_TOKEN=pi5-sensor-token-2024-super-secret

# Grafana Configuration
GRAFANA_HOST=localhost
GRAFANA_PORT=3000
GRAFANA_USERNAME=pi5admin
GRAFANA_PASSWORD=pi5sensors2024

# Alert Thresholds
ALERT_TEMP_HIGH=30.0
ALERT_TEMP_LOW=10.0
ALERT_HUMIDITY_HIGH=80.0
ALERT_HUMIDITY_LOW=30.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=/home/pi/sensor-monitor-pi5/sensor_monitor.log

# Development
DEBUG_MODE=false
MOCK_SENSORS=false
